  <script>
    // JavaScript to calculate date 15 days from today
    const today = new Date();
    const dateIn15Days = new Date(today.setDate(today.getDate() + 15));

    // Format the date to a readable format (e.g., YYYY-MM-DD)
    const formattedDate = dateIn15Days.toISOString().split('T')[0];

    // Insert the date into the paragraph with id "dateIn15Days"
    document.getElementById('dateIn15Days').innerText = `${formattedDate}`;
</script>

<script>
    // Generate a unique invoice number with prefix 'INV'
    function generateInvoiceNumber() {
        // Get the current timestamp to create a unique 7-digit number
        const uniquePart = Date.now().toString().slice(-7); // last 7 digits of the timestamp
        const invoicePrefix = 'INV'; // Prefix for invoice
        
        // Concatenate prefix with the unique 7-digit number
        return invoicePrefix + uniquePart;
    }

    // Display the generated invoice number in the HTML
    document.getElementById('invoiceNumber').innerText = generateInvoiceNumber();
</script>
